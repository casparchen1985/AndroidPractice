<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300pt">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upperCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/avatar_restaurant"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/name_restaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="餐廳名稱"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar_restaurant"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="電話號碼"
            app:layout_constraintStart_toEndOf="@+id/avatar_restaurant"
            app:layout_constraintTop_toBottomOf="@+id/name_restaurant" />

        <TextView
            android:id="@+id/tel_restaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0934 \n 56789 \n 345 \n 6789  \n 3456789"
            app:layout_constraintTop_toBottomOf="@+id/name_restaurant"
            app:layout_constraintStart_toEndOf="@+id/tel"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            app:layout_constraintStart_toEndOf="@+id/avatar_restaurant"
            app:layout_constraintTop_toBottomOf="@+id/tel_restaurant" />

        <TextView
            android:id="@+id/add_restaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="新北市 \n 永和區  \n 345 \n 67  \n 89號 "
            app:layout_constraintTop_toBottomOf="@+id/tel_restaurant"
            app:layout_constraintStart_toStartOf="@+id/tel_restaurant"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/opentime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="營業時間"
            app:layout_constraintStart_toEndOf="@+id/avatar_restaurant"
            app:layout_constraintTop_toBottomOf="@+id/add_restaurant" />

        <TextView
            android:id="@+id/opentime_restaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10~14 \n 28~11  \n 984~234"
            app:layout_constraintTop_toBottomOf="@+id/add_restaurant"
            app:layout_constraintStart_toEndOf="@+id/opentime"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
    android:id="@+id/intro"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="介紹"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/upperCell" />

    <TextView
        android:id="@+id/intro_restaurant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="很多 \n 有的沒的  \n 都寫在這邊"
        app:layout_constraintTop_toBottomOf="@+id/intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#9F8686"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_restaurant" />


</androidx.constraintlayout.widget.ConstraintLayout>